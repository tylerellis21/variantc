{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-build-debug",
            "type": "shell",
            "command": "cd build/debug && cmake build -DCMAKE_BUILD_TYPE=Debug ../../ && make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake-build-release",
            "type": "shell",
            "command": "cd build/release && cmake build -DCMAKE_BUILD_TYPE=Release ../../ && make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make-release",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build/release && make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "make-debug",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build/debug && make",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}